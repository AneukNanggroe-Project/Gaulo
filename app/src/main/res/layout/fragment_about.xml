<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.about.AboutFragment">
    <TextView
        android:id="@+id/researchCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/research"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/researchDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/researchCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/researchDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/seulanga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seulanga Labs"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"/>
        <TextView
            android:id="@+id/researchDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/research_seulanga"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/licenseCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/license"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailText"/>
    <View
        android:id="@+id/licenseDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/licenseCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/licenseContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/licenseDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/licenseLib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_lib"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"/>
        <TextView
            android:id="@+id/licenseLibDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_lib_desc"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
